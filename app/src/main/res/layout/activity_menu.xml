<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    tools:context=".MenuActivity" >

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coursesIimageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="125dp"
        android:onClick="showManageResults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_courses" />

    <TextView
        android:id="@+id/menu_courses_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/menu_view_courses"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/coursesIimageView"
        app:layout_constraintEnd_toEndOf="@+id/coursesIimageView"
        app:layout_constraintStart_toStartOf="@+id/coursesIimageView" />

    <ImageView
        android:id="@+id/accountImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="125dp"
        android:onClick="showAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coursesIimageView"
        app:srcCompat="@drawable/menu_account" />

    <TextView
        android:id="@+id/menu_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/menu_my_account"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/accountImageView"
        app:layout_constraintEnd_toEndOf="@+id/accountImageView"
        app:layout_constraintStart_toStartOf="@+id/accountImageView" />

    <ImageView
        android:id="@+id/logoutImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="125dp"
        android:onClick="showLogoutModal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountImageView"
        app:srcCompat="@drawable/menu_logout" />

    <TextView
        android:id="@+id/menu_logout_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/menu_logout"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/logoutImageView"
        app:layout_constraintEnd_toEndOf="@+id/logoutImageView"
        app:layout_constraintStart_toStartOf="@+id/logoutImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>